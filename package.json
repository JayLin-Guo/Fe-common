{
  "name": "@jr/fe-common",
  "version": "1.0.0",
  "description": "Jr前端通用代码仓库 - 包含组件库、工具包、静态资源服务和自动生成工具",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "node scripts/setup.js",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "build": "lerna run build",
    "build:changed": "lerna run build --since",
    "build:ui": "lerna run build --scope=@jr/ui-components",
    "test": "lerna run test",
    "test:changed": "lerna run test --since",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "dev": "lerna run dev --parallel",
    "dev:playground": "yarn workspace playground dev",
    "dev:ui": "lerna run dev --scope=@jr/ui-components",
    "publish": "lerna publish",
    "publish:beta": "lerna publish --dist-tag beta",
    "version": "lerna version",
    "changed": "lerna changed",
    "diff": "lerna diff",
    "playground": "yarn build:ui && yarn dev:playground"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "husky": "^8.0.3",
    "lerna": "^7.4.2",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.2.2",
    "vue-eslint-parser": "^9.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.22.0"
  },
  "repository": {
    "type": "git",
    "url": "your-git-repository-url"
  },
  "publishConfig": {
    "registry": "http://your-private-npm-registry.com"
  }
} 